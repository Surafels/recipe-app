<p style="color: green"><%= notice %></p>

<% @public_recipes.includes(:user, :recipe_foods).each do |recipe| %>
  <div class="row">
    <div class="card d-flex flex-row">
      <div class="row col-6">
        <h2>
          <%= link_to recipe.name, recipe_path(recipe) %>
        </h2>
        <span>By: <%= recipe.user.name %></span>
      </div>
      <div class="d-flex flex-column">
        <p>Total food items: <%= recipe.recipe_foods_count %></p>
        <p>Total price: <%= calculate_total_price(recipe) %></p>
      </div>
    </div>
  </div>
<% end %>
